<%- include("./partials/header")%>
<%- include("./partials/navbar")%>

<div class="container" style="margin-top: 5.5rem;">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <h1>Write New Blog</h1>
            <form action="/blogs" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input class="form-control" type="text" name="title" placeholder="title" id="title">
                </div>
                <div class="mb-3">
                    <label for="img" class="form-label">Image Url</label>
                    <input class="form-control" type="text" name="img" id="img" placeholder="Image">
                </div>
               
                <div class="mb-3">
                    <label for="body">Blog Body</label>
                    <textarea  class="form-control" name="body" id="" cols="30" rows="5" id="body"></textarea>
                </div>
            
               
                <button class="btn btn-outline-dark">Submit</button>
            </form>
        </div>
        <div class="col-lg-2"></div>
    </div>

   

</div>







